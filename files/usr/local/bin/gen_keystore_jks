#!/usr/bin/env bash

if [ ! -f $CATALINA_BASE/conf/localhost-rsa.jks ] && [ -d /ssl ]; then
    openssl pkcs12 -export \
                    -password pass:"" \
                    -in /ssl/ssl.crt \
                    -inkey /ssl/ssl.key \
                    --certfile /ssl/ssl.crt \
                    -out /tmp/keystore.p12 && \
    keytool -importkeystore \
            -srckeystore /tmp/keystore.p12 \
            -srcstoretype pkcs12 \
            -destkeystore $CATALINA_BASE/conf/localhost-rsa.jks \
            -deststoretype JKS \
            -deststorepass changeit \
            -destkeypass changeit \
            -srcstorepass "" \
            -deststoretype pkcs12 && \
    rm /tmp/keystore.p12
    perl -p0i -e 's/<!--(\n    <Connector port="8443".*\n.*\n.*\n.*\n.*\n.*\n.*\n)    -->/\1/' $CATALINA_BASE/conf/server.xml
fi
